<div class="col-md-4">
  <p class="text-center">
    <a href="products/<%= product.id %>">
      <%= image_tag url_for(product.image), size: "200x200" if product.image.attached? %>
    </a>
  </p>
  <p class="text-center">
    <%= link_to product.name, product %>
  </p>

  <p class="text-center">
    <strong>Price:</strong>
    <%= product.price %>
  </p>
</div>
