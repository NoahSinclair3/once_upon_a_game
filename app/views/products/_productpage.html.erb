<div>
  <p class="text-center">
  <%= image_tag url_for(@product.image), size: "200x200" if @product.image.attached? %>
  </p>
  <p class="text-center">
    <%= @product.name %>
  </p>

  <p class="text-center">
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p class="text-center">
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p class="text-center">
    <strong>Stock:</strong>
    <%= @product.stock %>
  </p>

  <p class="text-center">
    <strong>Category:</strong>
    <%= @product.category_id %>
  </p>
</div>
